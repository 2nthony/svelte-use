    "typescript": "^4.4.4",
    "unplugin-icons": "^0.7.6",
    "unplugin-vue-components": "^0.14.13",
    "vite": "^2.6.14",
    "vite-plugin-windicss": "^1.5.1",
    "vitepress": "^0.17.3",
    "vue": "^3.2.21",
    "vue-demi": "^0.11.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": true
    }
  }
}
