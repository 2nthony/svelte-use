{
  "name": "@svelte-use/monorepo",
  "version": "0.5.0",
  "private": true,
  "description": "Collection of essential Svelte Utilities",
  "workspaces": [
    "packages/*"
  ],
  "author": "2nthony <https://github.com/evillt>",
  "license": "MIT",
  "scripts": {
    "build": "esno scripts/build.ts",
    "build:redirects": "esno scripts/redirects.ts",
    "build:rollup": "cross-env NODE_OPTIONS=\"--max-old-space-size=6144\" rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist types packages/*/dist",
    "docs": "vitepress dev packages",
    "docs:serve": "vitepress serve packages",
    "docs:build": "npm run update:full && vitepress build packages && npm run build:redirects && esno scripts/post-docs.ts",
    "publish:ci": "esno scripts/publish.ts",
    "release": "esno scripts/release.ts && git push --follow-tags",
    "update": "esno scripts/update.ts",
    "update:full": "esno scripts/update.ts && npm run build:types && npm run update:recent",
    "update:recent": "esno scripts/recently-updated.ts"
  },
  "devDependencies": {
    "@iconify/json": "^1.1.399",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.22",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^27.0.1",
    "@types/js-yaml": "^4.0.3",
    "@types/node": "^16.7.10",
    "@types/prettier": "^2.3.2",
    "@vueuse/core": "^6.2.1",
    "bumpp": "^7.1.1",
    "commitizen": "^4.2.4",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.10.6",
    "esbuild-register": "^3.0.0",
    "esno": "^0.9.1",
    "export-size": "^0.4.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "postcss": "^8.3.6",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.3.2",
    "prism-theme-vars": "^0.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.4",
    "simple-git": "^2.45.1",
    "svelte": "^3.42.5",
    "svelte-preprocess": "^4.9.4",
    "typescript": "^4.4.2",
    "unplugin-icons": "^0.7.6",
    "unplugin-vue-components": "^0.14.13",
    "vite": "^2.5.6",
    "vite-plugin-windicss": "^1.4.1",
    "vitepress": "^0.17.1",
    "vue": "^3.2.9",
    "vue-demi": "^0.11.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": true
    }
  }
}
